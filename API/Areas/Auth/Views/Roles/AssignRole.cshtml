@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "AssignRole";

}

<br/>
<section>
    <div class="card">
        <div class="card-header">
            <h5 class="font-weight-bold" style="color: black">Assign Role Panel</h5>
        </div>
        <div class="card-body">
            <div><h4 class="text-primary">@ViewBag.msg</h4></div>
            <form class="form-inline" asp-area="Auth" asp-controller="Roles" asp-action="AssignRole" method="post">
                <label>User Email :</label>
                <input type="text" class="form-control" name="useremail" value="" placeholder="Please type role name..."/>
                <select class="form-control ml-1" name="rname">
                    <option value="">----Select Role----</option>
                    @foreach (var item in ViewBag.roles)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
                <input type="submit" class="form-control btn btn-success ml-1" value="Assign Role"/>
            </form>
        </div>
    </div>
    

</section>

